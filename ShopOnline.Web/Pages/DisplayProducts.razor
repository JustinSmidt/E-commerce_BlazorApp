@using System.Globalization;
@inherits DisplayProductsBase

@foreach (var item in Products)     //using bootstrap 5
{
    <div class="col-md-3 mb-2">
        <a href="/ProductDetails/@item.Id">
            @*This link must invoke ProductDetails component*@
            <div class="card">
                <img class="img-thumbnail" src="@item.ImageURL">
                <div class="card-body">
                    <h5 class="card-title mb-3">
                        @item.Name
                    </h5>
                    <p class="card-text">
                        <b>@item.Price.ToString("C", new CultureInfo("en-US"))</b>
                    </p>
                </div>
            </div>
        </a>
    </div>
}